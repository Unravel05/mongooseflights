<%- include('../partials/header') %>

<h2>Flight List</h2>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Departure</th>
      <th>Arrival</th>
      <th>Destination</th>
      <th>Flight Id</th>
      <th>Landed</th>
      <th>Clean</th>
    </tr>
  </thead>
  <tbody>
    <!-- Write the line of EJS to iterate over movies using forEach -->
    <% flights.forEach(function(m) { %>

        <tr>
            <td><%= m.airline %></td>
            <td><%= m.airport %></td>
            <td><%= m.departure %></td>
            <td><%= m.arrival %></td>
            <td><%= m.destination %></td>
            <td><%= m.flightId %></td>
            <td><%= m.landed ? 'Yes' : 'No' %></td>
            <td><%= m.clean ? 'Yes' : 'No' %></td>
            <td><a href="/flights/<%= m._id %>">Details</a></td>
        </tr>
        <!-- Close the forEach using EJS here -->
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>